{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",   
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "rootDir": "src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}